<div class="box">
  <h2 class="box-title">ポートフォリオ作成</h2>
  <div class="box-inner">
    <%= form_for (@portfolio) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "ポートフォリオの名前" %>
      </div>

      
      <div class="form-group">
        <%= f.collection_select :security_id, Security.all, :security_code, :name %>
      </div>

      <div class="form-group">
        <%= collection_select @portfolio, :product_id, Product.all, :product_code, :name %>
        <%= f.text_field :name, placeholder: "投資割合（整数％）" %>
      </div>

      <div class="form-group">
        <%= f.text_field :purpose, class: "form-control", placeholder: "ポートフォリオの投資目的・方針" %>
      </div>
      <div class="submit-group">
        <%= f.submit "ポートフォリオを作成する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>